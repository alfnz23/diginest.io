# DigiNest.io - Production Environment Variables
# Copy this file to .env.local and replace with your actual credentials

# ========================================
# PAYMENT GATEWAYS
# ========================================

# Stripe Live Credentials (Primary Payment)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY_HERE

# PayPal Live Credentials (Secondary Payment)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=YOUR_PAYPAL_LIVE_CLIENT_ID_HERE
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_CLIENT_SECRET_HERE

# ========================================
# APP CONFIGURATION
# ========================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://diginest.io
NEXT_PUBLIC_APP_NAME=DigiNest.io
NODE_ENV=production

# ========================================
# EMAIL SERVICE (Choose One)
# ========================================

# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY_HERE
EMAIL_FROM=noreply@diginest.io

# Option 2: Mailgun
MAILGUN_API_KEY=YOUR_MAILGUN_API_KEY_HERE
MAILGUN_DOMAIN=mg.diginest.io

# Option 3: Resend
RESEND_API_KEY=re_YOUR_RESEND_API_KEY_HERE

# ========================================
# ANALYTICS & TRACKING
# ========================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-YOUR_GOOGLE_ANALYTICS_ID
NEXT_PUBLIC_GTM_ID=GTM-YOUR_GOOGLE_TAG_MANAGER_ID

# Facebook Pixel (Optional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=YOUR_FACEBOOK_PIXEL_ID

# ========================================
# SECURITY & AUTH
# ========================================

# Authentication Secret (Generate a long random string)
NEXTAUTH_SECRET=YOUR_VERY_LONG_RANDOM_SECRET_STRING_HERE
NEXTAUTH_URL=https://diginest.io

# Session Security
SESSION_SECRET=ANOTHER_LONG_RANDOM_STRING_FOR_SESSIONS

# ========================================
# DATABASE (If Using)
# ========================================

# Option 1: Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Option 2: PlanetScale
DATABASE_URL=mysql://username:password@host/database

# ========================================
# STORAGE & CDN
# ========================================

# AWS S3 (For file storage)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=diginest-products

# Cloudinary (For image optimization)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# ========================================
# ERROR MONITORING
# ========================================

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# LogRocket
LOGROCKET_APP_ID=your-logrocket-app-id

# ========================================
# PERFORMANCE MONITORING
# ========================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=YOUR_VERCEL_ANALYTICS_ID

# ========================================
# WEBHOOKS & INTEGRATIONS
# ========================================

# Webhook Security
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_KEY

# Slack Integration (For notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# LEGAL & COMPLIANCE
# ========================================

# Cookie Consent
COOKIE_CONSENT_ENABLED=true

# GDPR Compliance
GDPR_ENABLED=true

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable Features
ENABLE_NEWSLETTER=true
ENABLE_AFFILIATE_PROGRAM=false
ENABLE_REVIEWS=true
ENABLE_WISHLISTS=true
